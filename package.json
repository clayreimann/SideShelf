{
  "name": "abs-react-native",
  "description": "A modern React Native client for Audiobookshelf - the self-hosted audiobook and podcast server",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "license": "MIT",
  "keywords": [
    "audiobookshelf",
    "audiobook",
    "podcast",
    "react-native",
    "expo",
    "mobile"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/abs-react-native.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/abs-react-native/issues"
  },
  "homepage": "https://github.com/your-username/abs-react-native#readme",
  "scripts": {
    "start": "expo start",
    "build-testflight": "npm i && npx eas-cli build --platform ios --profile production --local --non-interactive",
    "android": "expo run:android",
    "ios": "expo prebuild --clean && expo run:ios",
    "ios:device": "expo prebuild --clean && expo run:ios --device",
    "web": "expo start --web",
    "lint": "expo lint",
    "lint:complexity": "npx eslint . --ext .ts,.tsx,.js,.jsx --format json --output-file eslint-report.json || true",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:report": "jest --coverage --json --outputFile=test-results.json && echo 'open test-report.html coverage/lcov-report/index.html'",
    "drizzle:generate": "drizzle-kit generate --config=drizzle.config.ts"
  },
  "dependencies": {
    "@expo/config-plugins": "^54.0.1",
    "@expo/vector-icons": "^15.0.2",
    "@kesha-antonov/react-native-background-downloader": "github:clayreimann/react-native-background-downloader#spike-event-queue",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-menu/menu": "^2.0.0",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "@types/uuid": "^10.0.0",
    "async-lock": "^1.4.1",
    "drizzle-orm": "^0.44.5",
    "eventemitter3": "^5.0.1",
    "expo": "54.0.21",
    "expo-clipboard": "^8.0.7",
    "expo-constants": "~18.0.9",
    "expo-dev-client": "~6.0.16",
    "expo-drizzle-studio-plugin": "^0.2.0",
    "expo-file-system": "~19.0.17",
    "expo-font": "~14.0.8",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.10",
    "expo-linking": "~8.0.8",
    "expo-localization": "^17.0.7",
    "expo-router": "~6.0.14",
    "expo-secure-store": "^15.0.7",
    "expo-sharing": "~14.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-sqlite": "^16.0.8",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.8",
    "expo-updates": "^29.0.12",
    "expo-web-browser": "~15.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-device-info": "^14.1.1",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-get-random-values": "^1.11.0",
    "react-native-logs": "^5.5.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-render-html": "^6.3.4",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-track-player": "^4.1.2",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.0",
    "babel-plugin-inline-import": "3.0.0",
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "expo-sqlite-mock": "^3.0.0",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.13",
    "jest-html-reporter": "^4.3.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  },
  "private": true,
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
